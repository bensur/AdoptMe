    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AnimalType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnimalBreed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnimalColor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnimalAge)
        </td>
